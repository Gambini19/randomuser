<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.full_person_information.view.FullInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/iv_avatar_full_fragment"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_svg_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_full_name_full_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="NO INFO"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar_full_fragment"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar_full_fragment"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_birthday_full_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NO INFO"
        app:layout_constraintStart_toStartOf="@+id/tv_full_name_full_fragment"
        app:layout_constraintTop_toBottomOf="@+id/tv_full_name_full_fragment" />

    <TextView
        android:id="@+id/tv_address_full_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NO INFO"
        app:layout_constraintStart_toStartOf="@+id/tv_birthday_full_fragment"
        app:layout_constraintTop_toBottomOf="@+id/tv_birthday_full_fragment" />

    <TextView
        android:id="@+id/tv_telephone_full_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NO INFO"
        app:layout_constraintStart_toStartOf="@+id/tv_address_full_fragment"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_full_fragment" />

    <TextView
        android:id="@+id/tv_email_full_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NO INFO"
        app:layout_constraintStart_toStartOf="@+id/tv_telephone_full_fragment"
        app:layout_constraintTop_toBottomOf="@+id/tv_telephone_full_fragment" />

</android.support.constraint.ConstraintLayout>